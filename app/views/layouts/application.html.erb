<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <%= link_to 'Private Events', events_path, class: 'navbar-brand'%>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              
              <li class="nav-item">
                <%= link_to "All Events", events_path, class: 'nav-link' %>
              </li>
              
              <li class="nav-item">
                <%= link_to "Users", users_path, class: 'nav-link'%>
              </li>
            </ul>

            <ul class="navbar-nav ml-auto">
              <% if !logged_in? %>
                <li class="nav-item">
                  <%= link_to 'Login', login_path, class: 'nav-link'%>
                </li>

                <li class="nav-item">
                  <%= link_to 'Sign Up', new_user_path, class: 'nav-link'%>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Create an Event', new_event_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Log Out', logout_path, class: 'nav-link' %>
                </li>

              <% end %>
            </ul>
            
          </div>
        </nav>


      <div class = "container">
        <%= yield %>

      </div>
  </body>
</html>
