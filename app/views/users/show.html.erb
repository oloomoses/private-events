<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %> 
</p>

<% @events.each do |event| %>
  <p>
    <strong>Name:</strong>
    <%= event.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>
  <p>
    <strong>Date</strong>
    <%= event.date %>
  </p>


<p>
  <h3>Events Attended By the: <%= @user.name %></h3>

  <%= @user.attended_events %>
</p>


  <%= link_to 'Show Event', event_path(@event) %><br>

<% end %>

<% if logged_in? && current_user == @user %>
  <%= link_to 'Edit', edit_user_path(@user) %>
<% end %>
<%= link_to 'Back', users_path %>

